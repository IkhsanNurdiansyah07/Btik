<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="161dp"
            android:layout_height="145dp"
            android:layout_marginTop="75dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_person" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="19dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/back_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            android:text="" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textAlignment="center"
            android:textColor="#D2D2D2"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nama"
            android:layout_marginTop="5dp"
            android:text="raihanchaira21@gmail.com" />

        <ImageView
            android:id="@+id/gambar1"
            android:layout_width="21dp"
            android:layout_height="17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/pen"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email" />

        <TextView
            android:id="@+id/teks_profil"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato"
            android:gravity="left"
            android:text="Edit Profile"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/gambar1"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintEnd_toStartOf="@id/arrow_1"/>

        <ImageView
            android:id="@+id/arrow_1"
            android:layout_width="21dp"
            android:layout_height="17dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email" />

        <ImageView
            android:id="@+id/gambar2"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/cart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gambar1" />

        <TextView
            android:id="@+id/teks_order"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato"
            android:gravity="left"
            android:text="Order"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/teks_profil"
            app:layout_constraintLeft_toRightOf="@id/gambar2"
            />

        <ImageView
            android:id="@+id/arrow_2"
            android:layout_width="21dp"
            android:layout_height="17dp"
            android:layout_marginLeft="259dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/arrow"
            app:layout_constraintLeft_toRightOf="@id/teks_order"
            app:layout_constraintTop_toBottomOf="@id/arrow_1"/>


        <ImageView
            android:id="@+id/gambar3"
            android:layout_width="21dp"
            android:layout_height="17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/delivery"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gambar2" />

        <TextView
            android:id="@+id/teks_delivery"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato"
            android:gravity="left"
            android:text="Delivery Address"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/gambar3"
            app:layout_constraintTop_toBottomOf="@id/teks_order"
            app:layout_constraintLeft_toRightOf="@id/gambar2"/>

        <ImageView
            android:id="@+id/arrow_3"
            android:layout_width="21dp"
            android:layout_height="17dp"
            android:layout_marginLeft="203dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/arrow"
            app:layout_constraintLeft_toRightOf="@id/teks_delivery"
            app:layout_constraintTop_toBottomOf="@id/arrow_2"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_log_out"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_log_out"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>