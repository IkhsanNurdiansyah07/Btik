<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/back"
        android:layout_width="19dp"
        android:layout_height="25dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/back_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gambar"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/gambar"
        android:layout_width="137dp"
        android:layout_height="142dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="82dp"
        android:layout_marginRight="82dp"
        android:background="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teks_login"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:letterSpacing="0.01"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="4sp"
        android:text="Information"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/gambar"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/Gender"
        android:layout_width="82dp"
        android:layout_height="41dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4sp"
        android:text="Gender"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/teks_login"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:paddingLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/Gender"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Male"
            android:fontFamily="@font/roboto"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:lineSpacingExtra="4sp"
            app:layout_constraintTop_toBottomOf="@+id/Gender"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Female"
            android:fontFamily="@font/roboto"
            android:textColorHint="@color/black"
            android:lineSpacingExtra="4sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Gender" />
    </RadioGroup>

    <EditText
        android:id="@+id/name"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:paddingLeft="20dp"
        android:hint="Name"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:background="@drawable/custom_box_address"
        app:layout_constraintTop_toBottomOf="@id/gender"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/age"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:paddingLeft="20dp"
        android:hint="Age"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:background="@drawable/custom_box_address"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:paddingLeft="20dp"
        android:hint="Phone Number"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:background="@drawable/custom_box_address"
        app:layout_constraintTop_toBottomOf="@id/age"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4sp"
        android:background="@drawable/custom_button2"
        android:textColor="@color/white"
        android:hint="Submit"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/phoneNumber"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

