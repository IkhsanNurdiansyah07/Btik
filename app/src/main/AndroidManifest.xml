            android:name=".checkout.CheckoutActivity"
            android:exported="false"/>
        <activity
            android:name=".verifivation.VerificationActivity"
            android:exported="true"/>
        <activity android:name=".confirm.ConfirmActivity" android:exported="false"/>
        <activity android:name=".congrats.CongratsActivity" android:exported="false"/>
        <activity android:name=".resi.ResiActivity" android:exported="false"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>