<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Verification"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:fontFamily="@font/lato"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="19dp"
        android:layout_height="25dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/back_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        android:id="@+id/tvTitleNoRekening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.Rekening :"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBca"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleNoRekening"
        app:layout_constraintStart_toStartOf="@id/tvTitleNoRekening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bca"/>

    <TextView
        android:id="@+id/tvNorek"
        app:layout_constraintTop_toBottomOf="@id/tvTitleNoRekening"
        app:layout_constraintStart_toEndOf="@id/ivBca"
        android:layout_marginStart="20dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35217 8902 011"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvNamaRek"
        app:layout_constraintTop_toBottomOf="@id/tvNorek"
        app:layout_constraintStart_toStartOf="@id/tvNorek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NENENG ANISATUL WASLIAH"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNamaRek"
        android:layout_width="0dp"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:text="PLEASE INPUT ACCORDING TO THE TOTAL COST!!"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/ivUpload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_image_upload"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button_buynow"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>