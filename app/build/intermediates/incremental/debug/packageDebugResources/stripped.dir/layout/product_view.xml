<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        
    
                 
                         
                                                           
           

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:tag="layout/product_view_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".view.NewActivity">
            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="19dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/back_button"
                    />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"
                    android:text="Deskripsi Produk"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="55dp"
                tools:src="@drawable/foto"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/custom_product_view">

                <TextView
                    android:id="@+id/tvNamaBarang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/lato"
                    android:tag="binding_1"            
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Batik merah" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Rp. 50.000" />

                <LinearLayout
                    android:id="@+id/lytSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/tvNamaBarang">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMinItem"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/lato"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="-"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:id="@+id/tvTotalItem"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:text="1"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPlusItem"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/lato"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="+"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTitleDesc"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/lato"
                    android:text="DESCRIPTION"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|normal"
                    android:layout_below="@id/lytSecond"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/lato"
                    android:gravity="start"
                    android:tag="binding_2"      
                    android:textSize="16sp"
                    tools:text="asdhfajksdhfjakshdfjkahsfdjhasjdlkfhaskjfhasdf"
                    android:layout_below="@id/tvTitleDesc"/>

                <TextView
                    android:id="@+id/tvTitleSize"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato"
                    android:text="SELECT SIZE"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|normal"
                    android:layout_below="@id/info"/>

                <LinearLayout
                    android:id="@+id/lytSize"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/tvTitleSize"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSizeSmall"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_button_size"
                        android:fontFamily="@font/lato"
                        android:text="S"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSizeMedium"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/custom_button_size"
                        android:fontFamily="@font/lato"
                        android:text="M"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSizeLarge"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/custom_button_size"
                        android:fontFamily="@font/lato"
                        android:text="L"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSizeExtraLarge"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/custom_button_size"
                        android:fontFamily="@font/lato"
                        android:text="XL"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSizeDoubleExtraLarge"
                        android:layout_width="62dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/custom_button_size"
                        android:fontFamily="@font/lato"
                        android:text="XXL"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@id/lytSize"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/custom_button_buynow"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:text="BUY NOW"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


         